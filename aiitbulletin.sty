% 英文表題を登録するための命令を定義します
%\makeatletter% @記号を通常文字として扱う
\newcommand*{\etitle}[1]{\gdef\@etitle{#1}}
\newcommand*{\eauthor}[1]{\gdef\@eauthor{#1}}
\newcommand*{\eabstract}[1]{\long\def\@eabstract{#1}}
\newcommand*{\keywords}[1]{\gdef\@keywords{#1}}

\renewcommand{\maketitlehooka}{
　　\setcounter{footnote}{1}% 所属に用いるthanksの番号を1から開始します
}

\renewcommand{\maketitlehookd}{
  \begin{center}
    % 英文標題
    {\Large\bf \@etitle \par}
    \vskip 1.5em
    % 英文著者名
    {\large\bf \@eauthor \par}
    \vskip 2em
    % 英文概要
    {\large\bf Abstract}
  \end{center}%
  {\normalsize \@eabstract \par}
  \vskip 1em
  {\normalsize {\bf Keywords:} \@keywords \par}
  \vskip 1zw
}

\setlength{\thanksmarkwidth}{1zw}
\setlength{\thanksmargin}{0zw}

\newcommand*{\receivedon}[1]{\gdef\@receivedon{#1}}
\newcommand*{\makereceivedon}{
  \footnotetext{\hspace{-16pt} Received on \@receivedon.}
}

